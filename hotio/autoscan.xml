<?xml version="1.0"?>
<Container version="2">
  <Name>autoscan</Name>
  <Repository>hotio/autoscan</Repository>
  <Registry>https://hub.docker.com/r/hotio/autoscan</Registry>
  <Branch>
    <Tag>release-dockerhub</Tag>
    <TagDescription>Releases</TagDescription>
    <Repository>hotio/autoscan:release</Repository>
    <Registry>https://hub.docker.com/r/hotio/autoscan</Registry>
  </Branch>
  <Branch>
    <Tag>nightly-dockerhub</Tag>
