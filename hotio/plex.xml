<?xml version="1.0"?>
<Container version="2">
  <Name>plex</Name>
  <Repository>ghcr.io/hotio/plex</Repository>
  <Registry>https://github.com/hotio/plex/pkgs/container/plex</Registry>
  <Branch>
    <Tag>release</Tag>
    <TagDescription>No VPN</TagDescription>
  </Branch>
  <Branch>
    <Tag>release</Tag>
    <ExtraParams>--dns=1.1.1.1 --cap-add=NET_ADMIN --sysctl="net.ipv4.conf.all.src_valid_mark=1" --sysctl="net.ipv6.conf.all.disable_ipv6=1"</ExtraParams>
