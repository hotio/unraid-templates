<?xml version="1.0"?>
<Container version="2">
  <Name>mylar3</Name>
  <Repository>hotio/mylar3</Repository>
  <Registry>https://hub.docker.com/r/hotio/mylar3</Registry>
  <Branch>
    <Tag>release-dockerhub</Tag>
    <TagDescription>Releases</TagDescription>
    <Repository>hotio/mylar3:release</Repository>
    <Registry>https://hub.docker.com/r/hotio/mylar3</Registry>
  </Branch>
  <Branch>
    <Tag>nightly-dockerhub</Tag>
    <TagDescription>Every commit to python3-dev branch</TagDescription>
    <Repository>hotio/mylar3:nightly</Repository>
    <Registry>https://hub.docker.com/r/hotio/mylar3</Registry>
  </Branch>
  <Branch>
    <Tag>release-ghcr</Tag>
    <TagDescription>Releases</TagDescription>
    <Repository>ghcr.io/hotio/mylar3:release</Repository>
    <Registry>https://github.com/orgs/hotio/packages/container/package/mylar3</Registry>
  </Branch>
  <Branch>
    <Tag>nightly-ghcr</Tag>
    <TagDescription>Every commit to python3-dev branch</TagDescription>
    <Repository>ghcr.io/hotio/mylar3:nightly</Repository>
    <Registry>https://github.com/orgs/hotio/packages/container/package/mylar3</Registry>
  </Branch>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://hotio.dev/discord</Support>
  <Project>https://hotio.dev/containers/mylar3</Project>
  <Category>Downloaders: MediaApp:Books</Category>
  <TemplateURL>false</TemplateURL>
  <Icon>https://raw.githubusercontent.com/hotio/unraid-templates/master/hotio/img/mylar3.png</Icon>
  <Overview>Mylar is an automated Comic Book (cbr/cbz) downloader program for use with NZB and torrents written in python. It supports SABnzbd, NZBGET, and many torrent clients in addition to DDL.</Overview>
  <Description/>
  <MyIP/>
  <WebUI>http://[IP]:[PORT:8090]</WebUI>
  <ExtraParams/>
  <PostArgs/>
  <Network>bridge</Network>
  <Config Name="Host Port for 8090" Target="8090" Default="8090" Mode="tcp" Description="Container Port: 8090" Type="Port" Display="always-hide" Required="true" Mask="false"/>
  <Config Name="Host Path for /config" Target="/config" Default="" Mode="rw" Description="Container Path: /config" Type="Path" Display="always-hide" Required="true" Mask="false"/>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="Container Variable: PUID" Type="Variable" Display="advanced-hide" Required="false" Mask="false"/>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Container Variable: PGID" Type="Variable" Display="advanced-hide" Required="false" Mask="false"/>
  <Config Name="UMASK" Target="UMASK" Default="002" Mode="" Description="Container Variable: UMASK" Type="Variable" Display="advanced-hide" Required="false" Mask="false"/>
  <Config Name="ARGS" Target="ARGS" Default="" Mode="" Description="Container Variable: ARGS" Type="Variable" Display="advanced-hide" Required="false" Mask="false"/>
</Container>
